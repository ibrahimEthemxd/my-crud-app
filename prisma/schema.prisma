datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Status {
  PENDING
  IN_PROGRESS
  DONE
}

model Todo {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  status      Status   @default(PENDING)
  createdAt   DateTime? @default(now())
  updatedAt   DateTime @updatedAt
}
